{
  "compilerOptions": {
    /* Build Settings */
    "target": "es2020",                 
    "module": "commonjs",              
    "outDir": "./dist",                 
    "rootDir": "./src",                 
    "declaration": true,   
    "resolveJsonModule": true,       

    /* Strictness & Best Practices */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"] // Tells TSC to only compile files in the 'src' directory
}