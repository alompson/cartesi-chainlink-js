{
  "name": "cartesi-chainlink-lib",
  "version": "1.0.0",
  "license": "MIT",
  "description": "The essential toolkit for integrating Chainlink services with the Cartesi ecosystem, starting with Chainlink Automation.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "cartesi-chainlink": "dist/cli/main.js",
    "run-local-simulator": "dist/simulator/cli.js",
    "chainlink-upkeeps": "dist/cli/index.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "build": "tsc && chmod +x dist/cli/main.js && chmod +x dist/simulator/cli.js && chmod +x dist/cli/index.js",
    "prepublishOnly": "yarn build",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint \"src/**/*.ts\"",
    "start:simulator": "node dist/simulator/cli.js",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "axios": "^1.11.0",
    "ethers": "^5.7.2",
    "express": "^5.1.0",
    "prompts": "^2.4.2",
    "yargs": "^18.0.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.24",
    "@types/prompts": "^2.4.9",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "jest-extended": "^6.0.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.39.0"
  }
}
